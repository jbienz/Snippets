<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Validate Not Empty</Title>
      <Shortcut>valempty</Shortcut>
      <Description>Throws an ArgumentException if a variable is an empty string.</Description>
      <Author>Jared Bienz</Author>
    </Header>
    <Snippet>
      <Declarations>
        <Object Editable="true">
          <ID>var</ID>
          <Type>System.String</Type>
          <ToolTip>The variable to test for an empty string.</ToolTip>
          <Default>var</Default>
        </Object>
      </Declarations>
      <Code Language="csharp"><![CDATA[if ($var$==string.Empty) { throw new ArgumentException(nameof($var$)); }$end$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>