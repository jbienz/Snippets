  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Task Return Comment</Title>
      <Shortcut>comt</Shortcut>
      <Description>Expands to the language-independant code comment for returning a task.</Description>
      <Author>Jared Bienz</Author>
    </Header>
    <Snippet>
      <Code Language="csharp">
        <![CDATA[/// <returns>
        /// A <see cref="Task"/> that represents the operation.
        /// </returns>]]></Code>
    </Snippet>
  </CodeSnippet>
