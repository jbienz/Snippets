<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Validate Not Null or Empty</Title>
      <Shortcut>valnullempty</Shortcut>
      <Description>Throws an ArgumentNullException if a variable is null or an ArgumentException if a variable is an empty string.</Description>
      <Author>Jared Bienz</Author>
    </Header>
    <Snippet>
      <Declarations>
        <Object Editable="true">
          <ID>var</ID>
          <Type>System.String</Type>
          <ToolTip>The variable to test for null or an an empty string.</ToolTip>
          <Default>var</Default>
        </Object>
      </Declarations>
      <Code Language="csharp">
        <![CDATA[if (string.IsNullOrEmpty($var$)) { throw new ArgumentException(nameof($var$)); }$end$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>