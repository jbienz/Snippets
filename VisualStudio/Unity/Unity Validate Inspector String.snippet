<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Validate Unity Inspector String</Title>
      <Author>Jared Bienz</Author>
      <Description>Ensures that Inspector string is valid or disables the behavior.</Description>
      <Shortcut>valuins</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal Editable="false">
          <ID>classname</ID>
          <ToolTip>classname</ToolTip>
          <Default>classname</Default>
          <Function>ClassName()</Function>
        </Literal>	  
        <Object Editable="true">
          <ID>var</ID>
          <ToolTip>The variable to test.</ToolTip>
          <Default>var</Default>
        </Object>
      </Declarations>
      <Code Language="csharp"><![CDATA[if (string.IsNullOrEmpty($var$))
		{
			Debug.LogError($$"{nameof($var$)} is required but is not set. {nameof($classname$)} has been disabled.");
			this.enabled = false;
		}$end$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>